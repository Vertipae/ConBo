<?xml version="1.0" encoding="utf-8"?>
<!--ScrollView for scrolling when phone's keyboard is up-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingLeft="20dp">

    <!-- For name -->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/name_input_add"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:textColorHint="#B9F6CA"
        android:textSize="20dp"
        android:hint="Name">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/item_name_add"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textColorLink="#B9F6CA" />
    </android.support.design.widget.TextInputLayout>

    <!-- For phone -->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/phone_input_add"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColorHint="#B9F6CA"
        android:hint="Phone Number">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/item_phone_add"
            android:layout_width="320dp"
            android:textColor="#FFFFFF"
            android:layout_height="wrap_content"
            android:textColorLink="#B9F6CA" />
    </android.support.design.widget.TextInputLayout>
    <!-- For email -->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/name_input_email"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:textColorHint="#B9F6CA"
        android:textSize="20dp"
        android:hint="Email">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/item_email_add"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textColorLink="#B9F6CA" />
    </android.support.design.widget.TextInputLayout>

    <!-- For address -->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/address_input_add"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColorHint="#B9F6CA"
        android:hint="Address">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/item_address_add"
            android:layout_width="320dp"
            android:textColor="#FFFFFF"
            android:layout_height="wrap_content"
            android:textColorLink="#B9F6CA" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/add_button"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:onClick="addContact"
        android:background="#E91E63"
        android:textStyle="bold"
        android:text="Add" />

</LinearLayout>
</ScrollView>